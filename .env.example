# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mastablasta

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Encryption for OAuth tokens
ENCRYPTION_KEY=your-fernet-encryption-key

# Google OAuth Configuration (for Google One Tap, Calendar, and Drive)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:33766/api/oauth/google/callback

# Twitter OAuth Configuration
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://localhost:33766/api/oauth/twitter/callback
# Twitter API v2 for social listening (optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Meta (Facebook/Instagram) OAuth Configuration
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_REDIRECT_URI=http://localhost:33766/api/oauth/meta/callback

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:33766/api/oauth/linkedin/callback

# Reddit API for social listening (optional)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# Frontend URL (for OAuth callbacks)
FRONTEND_URL=http://localhost:5173

# OpenAI Configuration (for AI features - REQUIRED for production)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini Configuration (for AI features and video clipper)
# GOOGLE_API_KEY is used for both Gemini AI features and video clipping
# Can be used as alternative to OpenAI or alongside it
GOOGLE_API_KEY=your-google-gemini-api-key
GEMINI_API_KEY=your-google-gemini-api-key  # Alias for GOOGLE_API_KEY (both work)

# Redis Configuration (for production rate limiting - optional, recommended for production)
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=33766
